<!-- Begin Sidebar -->
<div class="col-md-3">
    <!-- Member -->
    <div class="row">
        <div class="col-md-12">
        	{% if not connected %}
                    <div class="layout">
						<div id="ribbon_info">
                            <h3 style="margin-top: 2px;margin-left: -25px;"><font color="#FFFFFF">☛ Mon compte</h3>
						</div>
						{{ _this.Form.create('User', {'action': 'login'}) }}
						<div class="input-group">
                            <center>{{ _this.Form.input('username', {'type': 'text', 'placeholder': 'Pseudo', 'class': 'login-widget', 'label': false, 'required': 'required'}) }}<center>
                        </div>
                        <div class="input-group">
                            <center>{{ _this.Form.input('password', {'type': 'password', 'placeholder': 'Mot de passe', 'class': 'password-widget', 'label': false, 'required': 'required'}) }}</center>
                        </div>
								<br>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="pull-left">										
                                        <button type="submit" class="reg-button" style="margin-left: 50px;">
                                        </button>
                                        </div>
                                        <div class="pull-right">
                                        <button type="submit" class="login-button" style="margin-left: 5px;">
                                        </button>
                                        </div>
                                    </div>
                                </div>
						{{ _this.Form.end }}
					</div>
            {% else %}
                    <div class="layout">
						<div id="ribbon_info">
                            <a href="{{ _this.Html.url({'controller': 'users', 'action': 'account', '?': {'tab': 'avatar'}}) }}">
                            {{ _this.Html.image(avatar, {'height': 32, 'width': 32, 'alt': 'Avatar', 'class': 'avatar-rounded', 'style': 'margin-top:-4px;margin-left:-7px;'}) }}
                        </a>
                   		{{ username }}
						</div>
                   </p>
                   <p>
                        <br>
						{% if ban == 1 %}
						<font color="#F50C0C"><center>Compte banni !</center></font>
						<br>
    					{% endif %}
                   		{% if role > 0 %}
                            <font color="#555"><i class="fa fa-angle-double-right"></i></font>
                            <a href="{{ _this.Html.url({'controller': 'pages', 'action': 'stats', 'admin': true}) }}">
                                Accèder à l'administration
                            </a>
                            <br>
                        {% endif %}
						{% if ban != 1 %}
                        {% if use_store == 1 %}
                            <font color="#555"><i class="fa fa-angle-double-right"></i></font>
                            <a href="{{ _this.Html.url({'controller': 'shops', 'action': 'reload'}) }}">
                                Vous avez <span class="open-sans">{{ tokens|number_format(0, ' ', ' ') }}</span> {{ site_money }}
                            </a>
                            <br>
                        {% endif %}
						{% endif %}
                        {% if use_economy == 1 %}
                            <font color="#555"><i class="fa fa-angle-double-right"></i></font>
                            <a href="">
                                Vous avez <span class="open-sans">{{ money_in_game|number_format(0, ' ', ' ') }}</span> {{ money_server }}
                            </a>
                            <br>
                        {% endif %}
                        <font color="#555"><i class="fa fa-angle-double-right"></i></font>
                        <a href="{{ _this.Html.url({'controller': 'pages', 'action': 'list_tickets'}) }}">
							{% if tickets > 1 %}
								Vous avez <span class="open-sans">{{ tickets }}</span> tickets ouverts
							{% else %}
								Vous avez <span class="open-sans">{{ tickets }}</span> ticket ouverts
							{% endif %}
                        </a>
                        <br>
                        {% if use_store == 1 %}
                        <font color="#555"><i class="fa fa-angle-double-right"></i></font> 
                        <a href="{{ _this.Html.url({'controller': 'users', 'action': 'account'}) }}">
                            Accéder à mon profil
                        </a>
                   		{% endif %}
                    </p>
                    <hr>
                    {% if use_store == 1 %}
                        <a href="{{ _this.Html.url({'controller': 'shops', 'action': 'reload'}) }}" class="btn-u btn-brd-hover btn-u-orange btn-u-xs" data-original-title="Acheter des {{ site_money }}" data-toggle="tooltip" data-placement="bottom" type="submit"><i class="fa fa-shopping-cart"></i> Recharger</a>
                        <a href="{{ _this.Html.url({'controller': 'users', 'action': 'logout'}) }}" class="btn-u btn-brd-hover btn-u-dark btn-u-xs pull-right" type="submit"><i class="fa fa-sign-out"></i> Déconnexion</a>
                    {% else %}
                        <a href="{{ _this.Html.url({'controller': 'users', 'action': 'account'}) }}" class="btn-u btn-brd-hover btn-u btn-u-xs" type="submit"><i class="fa fa-user"></i> Mon profil</a>
                        <a href="{{ _this.Html.url({'controller': 'users', 'action': 'logout'}) }}" class="btn-u btn-brd-hover btn-u-dark btn-u-xs pull-right" type="submit"><i class="fa fa-sign-out"></i> Déconnexion</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
    <!-- End Member -->
	    <br>
    <!-- Players -->
                    <div class="layout">
						<div id="ribbon_info">
                            <h3 style="margin-top: 2px;margin-left: -25px;"><font color="#FFFFFF">☛ Statistiques</font></h3>
						</div>
                            {% if api.call('server.bukkit.version')[0]['result'] == 'success' %}
                                {% set players = count_players %}
                                {% set max_players = api.call('players.online.limit')[0]['success'] %}
                                {% set pourcent = players * 100 / max_players %}
                                    <br />
									<center>
                                        <span class="open-sans"><i class="fa fa-users"></i> Joueurs connectés : {{ players }}/{{ max_players }}</span>
                                    </center>
                                    <div class="progress progress-u progress-sm">
                                        <div class="progress-bar progress-bar-dark" role="progressbar" aria-valuenow="{{ players }}" aria-valuemin="0" aria-valuemax="{{ max_players }}" style="width: {{ pourcent }}%">
                                        </div>
                                    </div>
                            {% else %}
							    <center>
                                <font color=red>Actuellement indisponible</font><br>
                                </center>
								<div class="progress progress-u progress-sm">
                                    <div class="progress-bar progress-bar-red" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                    </div>
                                </div>
                            {% endif %}
                            {% set online_players = api.call('players.online.names')[0]['success'] %}
                            {% for player in online_players %}
                                <li style="list-style: none; margin-top: 5px">
                                    <font color="#555"><i class="fa fa-angle-double-right"></i></font>{% set user_avatar %}http://cravatar.eu/helmavatar/{{ player }}/20.png{% endset %}
                                    {{ _this.Html.image(user_avatar, {'alt': 'Avatar'}) }} <font color="#BA0000">{{ player }}</font>
                                </li>
                            {% endfor %}
					</div>
    <!-- End Players -->
	    <br>
    <!-- Information -->
	                    <div class="layout">
						<div id="ribbon_info">
                            <h3 style="margin-top: 2px;margin-left: -25px;"><font color="#FFFFFF">☛ Etat du serveur</font></h3>
						</div>
                        	{% if api.call('server.bukkit.version')[0]['result'] == 'success' %}
                                <div class="testimonial-info center">
                                    <span class="testimonial-author">
                                        <font color="green"><i class="fa fa-shield"></i> Serveur en ligne</font>
                                        <br>
                                        <span class="text-muted">
                                            <small>{{ api.call('server.bukkit.version')[0]['success'] }}</small>
                                        </span>
                                    </span>
                                </div>
                            {% else %}
                                <div class="testimonial-info center">
                                    <span class="testimonial-author">
                                        <font color="red"><i class="fa fa-power-off"></i> Serveur hors ligne</font>
                                        <br>
                                        <span class="text-muted">
                                            <small>{{ api.call('server.bukkit.version')[0]['success'] }}</small>
                                        </span>
                                    </span>
                                </div>
                           	{% endif %}
						</div>
    <!-- End Information -->
	{% if use_store == 1 and use_donation_ladder == 1 and nb_donator > 0 %}
	    <br>
    <!-- Donation Ladder -->
	                    <div class="layout">
						<div id="ribbon_info">
                            <h3 style="margin-top: 2px;margin-left: -25px;"><font color="#FFFFFF">☛ Remerciements</font></h3>
						</div>
								<br>
                            	{{ _this.Html.image(best_donator['User']['avatar'], {'class': 'rounded-2x'}) }}
								<font color="#4a4a4a"> </span> {{ _this.Html.link(best_donator['User']['username'], {'controller': 'users', 'action': 'profile', 'username': best_donator['User']['username']}) }}  | Meilleur donateur</font>
								<br>
								<br>
								{{ _this.Html.image(last_donator['User']['avatar'], {'class': 'rounded-2x'}) }}
								<font color="#4a4a4a"> </span> {{ _this.Html.link(last_donator['User']['username'], {'controller': 'users', 'action': 'profile', 'username': last_donator['User']['username']}) }}  | Dernier donateur</font>
						</div>
    <!-- End Donation Ladder -->
    {% endif %}
    {% if widgets is not empty %}
	    <br>
        <!-- Custom Widgets -->
	                    <div class="layout">
						<div id="ribbon_info">
                            <h3 style="margin-top: 2px;margin-left: -25px;"><font color="#FFFFFF">☛ Widgets</font></h3>
						</div>
						{% for widget in widgets %}
                        {{ widget['Widget']['content'] }}
						{% endfor %}   
						</div>
        <!-- End Custom Widgets -->
    {% endif %}
	{% if buttons is not empty %}
	    <br>
        <!-- Custom Buttons -->
	                    <div class="layout">
						<div id="ribbon_info">
                            <h3 style="margin-top: 2px;margin-left: -25px;"><font color="#FFFFFF">☛ {{ customs_buttons_title }}</font></h3>
						</div>
						<center>
                    	{% for button in buttons %}
							<a href="{{ button['Button']['url'] }}" target="_blank" class="btn-u btn-u-{{ button['Button']['color'] }} btn-u-xs" style="margin-bottom: 3px;margin-top: 3px" type="button"><i class="fa fa-{{ button['Button']['icon'] }}"></i> {{ button['Button']['content'] }}</a>
                    	{% endfor %}
						</center>
						</div>
        <!-- End Custom Buttons -->
    {% endif %}
</div>
<!-- End Sidebar -->